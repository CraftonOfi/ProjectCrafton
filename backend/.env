###########################
# Backend .env (DESARROLLO)
###########################

# Entorno y servidor
NODE_ENV=development
PORT=3001
LOG_LEVEL=dev

# Base de datos (SQLite para dev)
DATABASE_URL="file:./dev.db"

# JWT (cambiar en producci√≥n por uno aleatorio y largo)
JWT_SECRET=rental-project-jwt-secret-super-seguro-2025-dev

# CORS (origins permitidos, separados por coma)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Stripe (usar keys de test en dev)
STRIPE_SECRET_KEY=sk_test_tu-stripe-secret-key-aqui
STRIPE_PUBLISHABLE_KEY=pk_test_tu-stripe-publishable-key-aqui

# Email (pendiente de configurar)
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password

# Seguridad y sesiones
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=24h

# Subidas de archivo
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Push Notifications (habilitar para enviar push). Reemplazar con tu Server Key real.
FCM_SERVER_KEY=CHANGE_ME_FCM_SERVER_KEY
