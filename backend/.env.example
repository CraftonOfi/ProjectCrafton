################################
# Backend .env.example (PROD)
################################

# Server
PORT=3001
NODE_ENV=production
JWT_SECRET=change_me_to_a_long_random_string

# Database
# For SQLite (not recommended for production beyond small demos):
DATABASE_URL="file:./prod.db"
# Or for Postgres (recommended):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME?schema=public"

# CORS: comma-separated allowed origins (your web/mobile domains)
CORS_ORIGIN=https://your-domain.com,https://admin.your-domain.com

# Logging
LOG_LEVEL=combined

# Stripe (set live keys in production if you process payments)
# STRIPE_SECRET_KEY=sk_live_xxx
# STRIPE_PUBLISHABLE_KEY=pk_live_xxx

# Email (SMTP)
# EMAIL_USER=no-reply@your-domain.com
# EMAIL_PASS=your-app-password-or-secret

# File uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Push Notifications (FCM HTTP v1 legacy key or v1 via service account)
# FCM_SERVER_KEY=AAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
